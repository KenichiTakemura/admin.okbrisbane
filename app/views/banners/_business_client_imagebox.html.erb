<div style="width:100%; position: relative; top:10px;">
	<%= noimage?(@business_client) %>
	<% @business_client.client_image.each do |client_image| %>
	<div style="position: relative; float: left; padding: 5px; width: 150px">
		<%= link_to image_tag(client_image.avatar.url(:thumb)), client_image.avatar.url(:medium), :target => "_blank"%>
		<ul>
			<li>
				<%= link_to client_image.business_client.business_name, client_image.business_client %>
			</li>
			<li>
				<%= client_image.medium_size %>
			</li>
			<li>
				<%= client_image.clicked %>&nbsp;<%= t("client_image_clicked") %>
			</li>
		</ul>
		<div style="position: relative; bottom: -30px; left: 50%">
			<%= link_to t('select'), attach_image_banners_path(:client_iamge => client_image, :banner => @banner), :remote => true, :method => :post, :class => 'button' %>
		</div>
	</div>
	<% end %>
</div>
