<%= form_for(@banner, :html => { :class => "form" })  do |f| %>
<%= hidden_field_tag :page_id, @page_id %>
<% if @banner.errors.any? %>
<div id="error_explanation">
	<h2><%= pluralize(@banner.errors.count, "error") %> prohibited this banner from being saved:</h2>
	<ul>
		<% @banner.errors.full_messages.each do |msg| %>
		<li>
			<%= msg %>
		</li>
		<% end %>
	</ul>
</div>
<% end %>
		<label class="checkbox"><%= f.check_box :is_disabled, :id => "_hide" %><%=t("hide")%></label>
	<span class="help-block"><%= t("if_checked_not_displayed") %></span>
<%= _script_document_ready(%Q|if ($('#_hide').is(":checked")) {
$('#_filter').attr("style", "opacity: 0.2;filter: alpha(opacity=20);") }; $('#_hide').click(function() { if ($('#_hide').is(":checked")) {$('#_filter').attr("style", "opacity: 0.2;filter: alpha(opacity=20);") } else {$('#_filter').attr("style", "") }});|)%>
<div id="_filter">
		<%= f.label :display_name, t('display_name'), :class => "" %>
		<%= f.text_field :display_name, :class => "" %>
		<%= f.label :div_width, t('div_width'), :class => "" %>
		<%= f.number_field :div_width, :class => "" %>
		<%= f.label :div_height, t('div_height'), :class => "" %>
		<%= f.number_field :div_height, :class => "" %>
		<%= f.label :img_width, t('img_width'), :class => "" %>
		<%= f.number_field :img_width, :class => "" %>
		<%= f.label :img_height, t('img_height'), :class => "" %>
		<%= f.number_field :img_height, :class => "" %>
		<%= f.label :effect, t("effect"), :class => "" %>
		<%= f.select :effect, options_for_select(@banner.effect_list, @banner.effect) %>
		<%= f.label :effect_speed, t("effect_speed"), :class => "" %>
		<%= f.number_field :effect_speed, :class => "" %>
			<span class="help-inline"><%= t("unit_second") %></span>
			<span class="help-block"><%= t("more_than_1") %></span>
		<%= f.label :style, t("style"), :class => "" %>
		<%= f.text_field :style, :class => "input-xlarge" %>
		<label class="checkbox"><%= f.check_box :is_random %><%=t("random")%></label>
		<span class="help-block"><%= t("randomly_display") %></span>
		<%= f.submit t("create"), :class => "btn btn-primary" %>
</div>
<% end %>

