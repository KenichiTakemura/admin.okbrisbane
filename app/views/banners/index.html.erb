<div class="page-header">
	<h2><%= t("banner") %> <%= t("page") %> <%= t(@page_name) %></h2>
</div>
<style>

	#_okbrisbane_left {
		height: 100%;
		position: relative;
		background: #FFFFFF;
		left:  0px;
		float: left;
		width: 0px;
	}
	#_okbrisbane_right {
		height: 100%;
		position: relative;
		background: #FFFFFF;
		right: 0px;
		float: right;
		width: 0px;
	}
</style>
<div class="row">
	<div class="row" id="_okbrisbane_left">
		<%= edittable_background_banner(1, "left") %>
		<%= edittable_background_banner(3, "left") %>
		<%= edittable_background_banner(5, "left") %>
	</div>
	<div class="row" id="_okbrisbane_right">
		<%= edittable_background_banner(2, "right") %>
		<%= edittable_background_banner(4, "right") %>
		<%= edittable_background_banner(6, "right") %>
	</div>
	<div class="container">
		<%= render :partial => "banners/#{@page_name}/index" %>
	</div>
</div>
