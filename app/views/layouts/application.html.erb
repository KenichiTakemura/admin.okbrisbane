<!DOCTYPE html>
<html>
	<head>
		<title>ADMIN OKBRISBANE</title>
		<%= stylesheet_link_tag "application", :cache => false %>
		<%= javascript_include_tag "application", :cache => false %>
		<%= javascript_include_tag 'slides.min.jquery.js' %>
		<%= csrf_meta_tag %>
	</head>
	<body>
		<div id="container">
			<div id="header">
				<h1><a href="/">OKBRISBANE</a></h1>
				<div id="user-navigation">
					<ul class="wat-cf">
						<li>
							<%= link_to t("system_management"), "#" %></a>
						</li>
						<li>
							<%= link_to t("signout"), destroy_admin_session_path, :method => :delete, :class => "logout", data: { confirm: t('are_you_sure_to_singout') } %>
						</li>
					</ul>
				</div>
				<div id="main-navigation">
					<ul>
						<li id="navigation_management">
							<%= link_to t("client_management"), business_clients_path %>
							<span class="management_menu">
								<div class="">
									<ul class="">
										<li class="menu">
											<%= link_to t("listing"), business_clients_path %>
										</li>
										<li class="menu">
											<%= link_to t("add"), new_business_client_path(@current_page) %>
										</li>

									</ul>
								</div></span>
						</li>
						<li id="navigation_management">
							<%= link_to t("banner_management"), banners_path %>
							<span class="management_menu">
								<div class="">
									<ul class="">
										<% Style.pages.each do |key,page| %>
										<li class="menu" id="<%= page %>" >
											<%= link_to(t(page), banners_path(:page_id => Style.pageid(key))) %>
										</li>
										<% end %>
									</ul>
								</div></span>
						</li>
						<li id="navigation_management">
							<%= link_to t("sales_management"), sales_managements_path %>
							<span class="management_menu">
								<div class="">
									<ul class="">
										<li class="menu" id="<%= Okvalue::ESTATE %>">
											<%= link_to t("title_" + Okvalue::ESTATE),  sales_managements_path(:category => Okvalue::ESTATE) %>
										</li>
										<li class="menu" id="<%= Okvalue::BUSINESS %>">
											<%= link_to t("title_" + Okvalue::BUSINESS),  sales_managements_path(:category => Okvalue::BUSINESS)  %>
										</li>
										<li class="menu" id="<%= Okvalue::MOTOR_VEHICLE %>">
											<%= link_to t("title_" + Okvalue::MOTOR_VEHICLE),  sales_managements_path(:category => Okvalue::MOTOR_VEHICLE)  %>
										</li>
										<li class="menu"  id="<%= Okvalue::ACCOMMODATION %>">
											<%= link_to t("title_" + Okvalue::ACCOMMODATION),  sales_managements_path(:category => Okvalue::ACCOMMODATION)  %>
										</li>
										<li class="menu" id="<%= Okvalue::LAW%>">
											<%= link_to t("title_" + Okvalue::LAW),  sales_managements_path(:category => Okvalue::LAW)  %>
										</li>
										<li class="menu" id="<%= Okvalue::STUDY%>">
											<%= link_to t("title_" + Okvalue::STUDY),  sales_managements_path(:category => Okvalue::STUDY)  %>
										</li>
										<li class="menu" id="<%= Okvalue::IMMIGRATION %>">
											<%= link_to t("title_" + Okvalue::IMMIGRATION),  sales_managements_path(:category => Okvalue::IMMIGRATION)  %>
										</li>
										<li class="menu" id="<%= Okvalue::TAX%>">
											<%= link_to t("title_" + Okvalue::TAX),  sales_managements_path(:category => Okvalue::TAX)  %>
										</li>
									</ul>
								</div></span>
						</li>
						<li id="navigation_management">
							<%= link_to t("post_management"), posts_managements_path %>
							<span class="management_menu">
								<div class="">
									<ul class="">
										<li class="menu" id="menu_<%= Style.page(:p_job) %>">
											<%= link_to t(Style.page(:p_job)),  posts_managements_path(:category => Style.page(:p_job)) %>
										</li>
										<li class="menu" id="menu_<%= Style.page(:p_buy_and_sell) %>">
											<%= link_to t(Style.page(:p_buy_and_sell)),  posts_managements_path(:category => Style.page(:p_buy_and_sell))  %>
										</li>
										<li class="menu" id="menu_<%= Style.page(:p_wellbeing) %>">
											<%= link_to t(Style.page(:p_wellbeing)),  posts_managements_path(:category => Style.page(:p_wellbeing))  %>
										</li>
									</ul>
								</div></span>
						</li>
						<li>
							<%= link_to t("member_management"), users_path %>
						</li>
						<li>
							<%= link_to t("site_statistics"), "#" %>
						</li>
						<li>
							<%= link_to t("issue_management"), "#" %>
						</li>
					</ul>
					<div class="clear"></div>
				</div>
			</div>

			<div id="wrapper" class="wat-cf">
				<div class="flash">
					<% flash.each do |type, message| -%>
					<div class="message <%= type %>">
						<p>
							<%= message %>
						</p>
					</div>
					<% end -%>
				</div>
				<div id="main">
					<div class="block">
						<div class="content">
							<%= yield %>
						</div>
					</div>
					<div id="footer">
						<div class="block">
							<p>
								Copyright &copy; <%= Time.now.year %> OKBRISBANE.  <%= version %>
							</p>
						</div>
					</div>
				</div>
				<div id="sidebar">
					<%= yield :sidebar %>
				</div>
			</div>
		</div>
	</body>
</html>
