<!DOCTYPE html>
<html>
	<head>
		<title>ADMIN OKBRISBANE</title>
		<!-- %= stylesheet_link_tag "web-app-theme/base", "web-app-theme/themes/default/style", "web-app-theme/override", :cache => true % -->
		<%= stylesheet_link_tag "application", :cache => false %>
		<!-- %= javascript_include_tag :defaults, :cache => true % -->
		<%= csrf_meta_tag %>
	</head>
	<body>
		<div id="container">
			<div id="header">
				<h1><a href="/">OKBRISBANE</a></h1>
				<div id="user-navigation">
					<ul class="wat-cf">
						
						<li>
							<%= link_to t("system_management", :default => "System Setting"), "#" %></a>
						</li>
						<li>
							<%= link_to t("web-app-theme.logout", :default => "Logout"), destroy_admin_session_path, :method => :delete, :class => "logout", data: { confirm: 'Sing out?' } %>
						</li>
					</ul>
				</div>
				<div id="main-navigation">
					<ul>
						<li>
							<%= link_to t("banner_management", :default => "Banner Management"), "#" %></a>
						</li>
						<li>
							<%= link_to t("user_management", :default => "User Management"), users_path %></a>
						</li>
						<li>
							<%= link_to t("post_management", :default => "Post Management"), "#" %></a>
						</li>
						<li>
							<%= link_to t("issue_management", :default => "Issue Management"), "#" %></a>
						</li>
					</ul>
					<div class="clear"></div>
				</div>
			</div>

			<div id="wrapper" class="wat-cf">
				<div class="flash">
					<% flash.each do |type, message| -%>
					<div class="message <%= type %>">
						<p>
							<%= message %>
						</p>
					</div>
					<% end -%>
				</div>
				<div id="main">
					<%= yield %>
					<div id="footer">
						<div class="block">
							<p>
								Copyright &copy; <%= Time.now.year %> OKBRISBANE.
							</p>
						</div>
					</div>
				</div>
				<div id="sidebar">
					<%= yield :sidebar %>
				</div>
			</div>
		</div>
	</body>
</html>
