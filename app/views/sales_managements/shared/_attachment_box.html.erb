<%= noattachment?(@post) %>
<% @post.attachment.each do |attachment| %>
<div style="position: relative; float: left;margin-left: 5px; margin-right: 5px;">
	<%= link_to image_tag("common/Icon-Document03-Blue.png", :size => "50x50", :title => "#{attachment.avatar_file_name}"), attachment.url %>
	<br/>
	<%= attachment.avatar_file_name if !attachment.avatar_file_name.nil? %>
	<br/>
	<% if !attachment.avatar_file_size.nil? %>
		<%= attachment.avatar_file_size   %> byte
	<% end %>
</div>
<% end %>