<% @images.each do |image| %>
<div style="position: relative; float: left;margin-left: 5px">
	<%= image_tag(image.thumb_image, :title => "#{image.something}") %>
	<div style="position: absolute; top: 0px; left:95%;">
		<%= link_to(t('x'), delete_image_sales_managements_path(:id => image.id, :t => @timestamp, :post_id => image.attached), :class => "delete_x", :remote => true, method: :delete, data: { confirm: t('confirm_delete') }) %> 
	</div>
</div>
<% end %>