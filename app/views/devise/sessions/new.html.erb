
			<%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => { :class => "form-horizontal" }) do |f| %>
			<fieldset>
				<legend>ADMIN SIGN IN</legend>
				<%= f.label :email, t("email"), :class => "" %>
				<%= f.email_field :email, :class => "input-xlarge" %>
				<%= f.label :password, t("password"), :class => "" %>
				<%= f.password_field :password, :class => "input-large"  %>
				<br>
				<% if devise_mapping.rememberable? %>
				<label class="checkbox"> <%= f.check_box :remember_me %><%= t(:remember_me) %> </label>
				<% end %>
				<%= f.submit t("admin_signin"), :class => "btn btn-primary" %>
				</fieldset>
			<% end %>
