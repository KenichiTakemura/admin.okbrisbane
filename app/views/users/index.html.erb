<div class="page-header">
	<h2><%=t("member")%> <%=t("List")%></h2>
</div>

		<form action="#" class="form">
			<table class="table table-condensed table-hover table-striped">
				<tr>
					<th class="first"><%= t(:post_id) %></th>
					<th><%= t(:email) %></th>
					<th><%= t(:name) %></th>				
					<th><%= t(:total_signin) %></th>
					<th><%= t(:confirmed) %></th>
					<th><%= t(:current_signin_at) %></th>
					<th><%= t(:current_signin_ip) %></th>
					<th><%= t(:last_signin_at) %></th>
					<th><%= t(:last_signin_ip) %></th>
					<th><%= t(:number_of_post) %></th>
					<th class="last"></th>
				</tr>
				<% @users.each do |user| %>
				<tr>
					<td><%= user.id%></td>
					<td><%= user.email%></td>
					<td><%= user.name%></td>
					<td><%= user.sign_in_count%></td>
					<td><%= Common.date_format_ymdhms(user.confirmed_at) %></td>
					<td><%= Common.date_format_ymdhms(user.current_sign_in_at)%></td>
					<td><%= user.current_sign_in_ip%></td>
					<td><%= Common.date_format_ymdhms(user.last_sign_in_at)%></td>
					<td><%= user.last_sign_in_ip%></td>
					<td><%= user.mypage.num_of_post %></td>
					<td><%= link_to t('Show'), user, :class => "btn btn-link" %>
						<% if !user.is_special %>
					 | <%= link_to t('Delete'), user, :method => :delete, :data => { :confirm => t("confirm_delete") }, :class => "btn btn-link" %>
					<% end %>
					</td>
				</tr>
				<% end %>
			</table>
		</form>

