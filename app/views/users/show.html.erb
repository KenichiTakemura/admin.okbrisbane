<div class="page-header">
	<h2><%= t("member") %> </h2>
</div>

	<table class="table table-condensed table-hover">
		<th class="first" style="width:20%"><%= t("item") %></th>
		<th class="last"><%= t("content") %></th>
		<tr class="">
			<td><%= label_tag :name, t("name"), :class => "" %> </td>
			<% if !@user.locked? %>
			<td><%= @user.name %></td>			
			<% else %>	
			<td><span class="text-warning"><i class="icon-lock"></i><%= @user.name %></span>
				<%=link_to(t("unblock"),users_unblock_path(@user),:class => "btn btn-link",:method => :post)%>
			</td>			
			<% end %>
		</tr>
		<tr class="">
			<td><%= label_tag :email, t("email"), :class => "" %> </td>
			<td><%= @user.email %></td>
		</tr>
		<tr class="">
			<td><%= label_tag :confirmed, t("confirmed"), :class => "" %> </td>
			<td><%= Common.date_format_ymdhms(@user.confirmed_at) %></td>
		</tr>
		<tr class="">
			<td><%= label_tag :current_signin_at, t("current_signin_at"), :class => "" %> </td>
			<td><%= Common.date_format_ymdhms(@user.current_sign_in_at) %></td>
		</tr>
		<tr class="">
			<td><%= label_tag :current_signin_ip, t("current_signin_ip"), :class => "" %> </td>
			<td><%= @user.current_sign_in_ip %></td>
		</tr>
		<tr class="">
			<td><%= label_tag :last_signin_at, t("last_signin_at"), :class => "" %> </td>
			<td><%= Common.date_format_ymdhms(@user.last_sign_in_at) %></td>
		</tr>
		<tr class="">
			<td><%= label_tag :last_signin_ip, t("last_signin_ip"), :class => "" %> </td>
			<td><%= @user.last_sign_in_ip %></td>
		</tr>

		<tr class="">
			<td><%= label_tag :job_post, t("num_of_job_post"), :class => "" %> </td>
			<td><%= link_to @user.job.size, posts_managements_path(:category => Style.page(:p_job), :user => @user), :class => "btn" %></td>
		</tr>
		<tr class="">
			<td><%= label_tag :buy_and_sell_post, t("num_of_buy_and_sell_post"), :class => "" %> </td>
			<td><%= @user.buy_and_sell.size %></td>
		</tr>
		<tr class="">
			<td><%= label_tag :well_being_post, t("num_of_wellbeing_post"), :class => "" %> </td>
			<td><%= @user.well_being.size %></td>
		</tr>
		<tr class="">
			<td><%= label_tag :comment, t("num_of_comment"), :class => "" %> </td>
			<td><%= @user.comment.size %></td>
		</tr>
		<tr class="">
			<td><%= label_tag :image, t("num_of_image"), :class => "" %> </td>
			<td><%= @user.image.size %></td>
		</tr>
		<tr class="">
			<td><%= label_tag :attachment, t("num_of_attachment"), :class => "" %> </td>
			<td><%= @user.attachment.size %></td>
		</tr>
		<tr class="">
			<td><%= label_tag :unattached_image, t("num_of_unattached_image"), :class => "" %> </td>
			<td><%= @user.unattached_image.size %> <%= link_to t("delete"), users_clean_image_path(@user), :method => :delete, :data => { :confirm => t("confirm_all_delete") }, :class => "btn" %></td>
		</tr>
		<tr class="">
			<td><%= label_tag :unattached_attachment, t("num_of_unattached_attachment"), :class => "" %> </td>
			<td><%= @user.unattached_attachment.size %> <%= link_to t("delete"), users_clean_attachment_path(@user), :method => :delete, :data => { :confirm => t("confirm_all_delete") }, :class => "btn" %></td>
		</tr>
		</table>
<%= link_to t('Back'), users_path, :class => "btn btn-link" %>
