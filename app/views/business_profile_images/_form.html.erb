<%= form_for(@business_profile_image, :html => { :class => "form" }) do |f| %>
<%= f.hidden_field :attached_id, :value => @business_client.id  %>
<%= admin_error_messages!(@business_profile_image) %>
<%= f.label :attached_id, t("business_client"), :class => "" %>
<span class="label label-info"><%= @business_client.business_name %></span>
<br>
<%= f.label :avatar, t("business_profile_image"), :class => "" %>
<%= f.file_field :avatar %>
<span class="help-block"><%= t("acceptable_extention") %></span>
<label class="checkbox"> <%= f.check_box :is_main %><%= t("is_main_profile") %> </label>
<%= f.submit t("add"), :class => "btn btn-primary" %>
<% end %>
